<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form id="thing">
      <input type="text" name="q" />
      <input type="submit" value="Search" />
    </form>
    <div id="results"></div>

    <script>
      document.querySelector('#thing').addEventListener('submit', function(e) {
        e.preventDefault();
        let q = document.querySelector('#thing input[name=q]').value;

        fetch('/api/' + q).then(res => res.text()).then(text => {
          document.querySelector('#results').innerHTML = text;
        });
      });
    </script>
  </body>
</html>
